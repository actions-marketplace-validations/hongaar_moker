{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "wsrun start",
    "build": "wsrun --stages build",
    "test": "wsrun test",
    "dev": "stmux -w always -e ERROR -m beep,system -- [ [ \"yarn watch:build\" .. \"yarn watch:test\" ] : -s 1/3 -f \"yarn start\" ]",
    "watch:build": "wsrun watch:build",
    "watch:test": "wsrun watch:test"
  },
  "devDependencies": {
    "stmux": "^1.8.0",
    "wsrun": "^5.2.0"
  }
}
